extends ../_content

block content
    .dashboard
        .dashboard__add
            form#dataForm(onsubmit='return false')
                .wizard
                    h3 Details
                    section.content-container
                        h1 Tour Details
                        .content-inner 
                            .content-box(class='w-1/2')
                                label(for='name') Name 
                                input(type='text' id='name' name='name' data-text='Name' required) 
                            .content-box(class='w-1/2')
                                label(for='duration') Duration
                                input(type='text' id='duration' name='duration' data-text='Duration')
                            .content-box(class='w-1/2')
                                label(for='maxGroupSize') Max Group Size 
                                input(type='text' id='maxGroupSize' name='maxGroupSize' data-text='Max Group Size') 
                            .content-box(class='w-1/2')
                                label(for='difficulty') Difficulty 
                                select.select-list(id='difficulty' name='difficulty')
                                    each difficulty in difficulties
                                        option(value=difficulty.level)= difficulty.level
                            .content-box(class='w-1/2')
                                label(for='price') Price 
                                input(type='text' id='price' name='price' data-text='Price') 
                            .content-box(class='w-1/2')
                                label(for='guides') Guides 
                                select.select-list-multiple(id='guides' name='guides' multiple='multiple')
                                    each guide in guides
                                        option(value=guide._id)= guide.name
                            .content-box(class='w-full')
                                label(for='summary') Summary 
                                #editor1(type='text' name='summary' data-text='Summary') 
                            .content-box(class='w-full')
                                label(for='description') Description 
                                #editor2(type='text' name='description' data-text='Description')

                    h3 Dates
                    section.content-container
                        h1 Tour Dates
                        .add-btn   
                            button.add-btn__date.waves-effect
                                svg
                                    use(xlink:href='/img/icons.svg#icon-plus')

                        .content-inner.date-box.relative
                            .date-box__line.ml-2
                            .content-box(class='relative ml-3 w-1/3')
                                .date-box__dot
                                label(for='startDates[0]') 1. Start Date 
                                input.datepicker(type='text' id='startDates[0]' name='startDates[0]' data-text='Start Date')

                    h3 Locations
                    section.content-container
                        h1 Tour Start Location
                        .content-inner 
                            .content-box(class='w-1/2')
                                label(for='startLocation[coordinates][0]') Latitude
                                input(type='text' id='startLocation[coordinates][0]' name='startLocation[coordinates][0]' data-text='Latitude')
                            .content-box(class='w-1/2')
                                label(for='startLocation[coordinates][1]') Longitude
                                input(type='text' id='startLocation[coordinates][1]' name='startLocation[coordinates][1]' data-text='Longitude')
                            .content-box(class='w-full')
                                label(for='startLocation[description]') Location Description
                                input(type='text' id='startLocation[description]' name='startLocation[description]' data-text='Location Description')
                            .content-box(class='w-full')
                                label(for='startLocation[address]') Location Address
                                input(type='text' id='startLocation[address]' name='startLocation[address]' data-text='Location Address')

                        h1 Tour Locations
                        .add-btn   
                            button.add-btn__location.waves-effect
                                svg
                                    use(xlink:href='/img/icons.svg#icon-plus')

                        .location-divider 
                            .location-counter 1
                            .content-border

                        .content-inner.location-box.pl-2
                            .content-box(class='w-1/2')
                                label(for='locations[0][coordinates][0]') Latitude
                                input(type='text' id='locations[0][coordinates][0]' name='locations[0][coordinates][0]' data-text='Latitude')
                            .content-box(class='w-1/2')
                                label(for='locations[0][coordinates][1]') Longitude
                                input(type='text' id='locations[0][coordinates][1]' name='locations[0][coordinates][1]' data-text='Longitude')
                            .content-box(class='w-full')
                                label(for='locations[0][description]') Location Description
                                input(type='text' id='locations[0][description]' name='locations[0][description]' data-text='Location Description')
                            .content-box(class='w-full')
                                label(for='locations[0][address]') Location Address
                                input(type='text' id='locations[0][address]' name='locations[0][address]' data-text='Location Address')
                            .content-box(class='w-full')
                                label(for='locations[0][day]') Location Day
                                input(type='text' id='locations[0][day]' name='locations[0][day]' data-text='Location Day')

                    h3 Images
                    section.content-container
                        h1 Cover Image
                        .content-inner 
                            .content-box(class='w-full')
                                .image-box.image-box--1
                                    input.input--1.hidden(type='file' id='imageCover' name='imageCover' data-text='Cover Image')
                                    .image-upload
                                        svg
                                            use(xlink:href='/img/icons.svg#icon-file-plus')
                                ul.preview-container.preview-container--1.hidden
                        h1 Tour Images
                        .content-inner 
                            .content-box(class='w-full')
                                .image-box.image-box--2
                                    input.input--2.hidden(type='file' id='images' name='images' data-text='Tour Images' data-length='3' multiple)
                                    .image-upload
                                        svg
                                            use(xlink:href='/img/icons.svg#icon-file-plus')
                                ul.preview-container.preview-container--2.hidden




