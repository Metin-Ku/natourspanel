extends ../_content
//- Label'ın içindeki for ile inputların name'i kesinlikle aynı olmalı
block content
    .dashboard
        .dashboard__add
            form#dataForm(onsubmit='return false')
                .wizard
                    h3 Details
                    section.content-container
                        h1 Tour Details
                        .content-inner 
                            .content-box(class='w-1/2')
                                label(for='name') Name 
                                .input-box
                                    input.input-text(type='text' id='name' name='name' data-required='required')
                            .content-box(class='w-1/2')
                                label(for='duration') Duration
                                .input-box
                                    input.input-text(type='text' id='duration' name='duration' data-required='required')
                            .content-box(class='w-1/2')
                                label(for='maxGroupSize') Max Group Size 
                                .input-box
                                    input.input-text(type='text' id='maxGroupSize' name='maxGroupSize' data-required='required') 
                            .content-box(class='w-1/2')
                                label(for='difficulty') Difficulty 
                                select.select-list(id='difficulty' name='difficulty' data-required='required')
                                    option(value='')
                                    each difficulty in difficulties
                                        option(value=difficulty.level)= difficulty.level
                            .content-box(class='w-1/2')
                                label(for='price') Price 
                                .input-box
                                    input.input-text(type='text' id='price' name='price' data-required='required') 
                            .content-box(class='w-1/2')
                                label(for='guides') Guides 
                                select.select-list-multiple(id='guides' name='guides' data-required='required' multiple='multiple')
                                    each guide in guides
                                        option(value=guide._id)= guide.name
                            .content-box(class='w-full')
                                label(for='editor1') Summary 
                                #editor1(type='text' name='summary') 
                                textarea.editor1.hidden(name='summary' data-required='required')
                            .content-box(class='w-full')
                                label(for='editor2') Description 
                                #editor2(type='text' name='description')
                                textarea.editor2.hidden(name='description' data-required='required')
                            .content-box(class='w-full')
                                label(for='active') Active / Passive
                                label.toggle-switchy(data-size='md' for='active')
                                    input#active(type='checkbox' name='active' checked value='true')
                                    span.toggle
                                        span.switch                            

                    h3 Dates
                    section.content-container
                        h1 Tour Dates
                        .add-btn   
                            button.add-btn__date.waves-effect
                                svg
                                    use(xlink:href='/img/icons.svg#icon-plus')

                        .content-inner.date-box.relative
                            .date-box__line.ml-2
                            .content-box(class='relative ml-3 w-1/3')
                                .date-box__dot
                                label(for='startDates[0]') 1. Start Date
                                .input-box 
                                    input.input-text.datepicker(type='text' id='startDates[0]' name='startDates[0]' data-required='required')

                    h3 Locations
                    section.content-container
                        h1 Tour Start Location
                        .content-inner 
                            .content-box(class='w-1/2')
                                label(for='startLocation[coordinates][0]') Latitude
                                .input-box
                                    input.input-text(type='text' id='startLocation[coordinates][0]' name='startLocation[coordinates][0]' data-required='required')
                            .content-box(class='w-1/2')
                                label(for='startLocation[coordinates][1]') Longitude
                                .input-box
                                    input.input-text(type='text' id='startLocation[coordinates][1]' name='startLocation[coordinates][1]' data-required='required')
                            .content-box(class='w-full')
                                label(for='startLocation[description]') Location Description
                                .input-box
                                    input.input-text(type='text' id='startLocation[description]' name='startLocation[description]' data-required='required')
                            .content-box(class='w-full')
                                label(for='startLocation[address]') Location Address
                                .input-box
                                    input.input-text(type='text' id='startLocation[address]' name='startLocation[address]' data-required='required')

                        h1 Tour Locations
                        .add-btn   
                            button.add-btn__location.waves-effect
                                svg
                                    use(xlink:href='/img/icons.svg#icon-plus')

                        .location-divider 
                            .location-counter 1
                            .content-border

                        .content-inner.location-box.pl-2
                            .content-box(class='w-1/2')
                                label(for='locations[0][coordinates][0]') Latitude
                                .input-box
                                    input.input-text(type='text' id='locations[0][coordinates][0]' name='locations[0][coordinates][0]' data-required='required')
                            .content-box(class='w-1/2')
                                label(for='locations[0][coordinates][1]') Longitude
                                .input-box
                                    input.input-text(type='text' id='locations[0][coordinates][1]' name='locations[0][coordinates][1]' data-required='required')
                            .content-box(class='w-full')
                                label(for='locations[0][description]') Location Description
                                .input-box
                                    input.input-text(type='text' id='locations[0][description]' name='locations[0][description]' data-required='required')
                            .content-box(class='w-full')
                                label(for='locations[0][address]') Location Address
                                .input-box
                                    input.input-text(type='text' id='locations[0][address]' name='locations[0][address]' data-required='required')
                            .content-box(class='w-full')
                                label(for='locations[0][day]') Location Day
                                .input-box
                                    input.input-text(type='text' id='locations[0][day]' name='locations[0][day]' data-required='required')

                    h3 Images
                    section.content-container
                        h1 Cover Image
                        .content-inner 
                            .content-box(class='w-full')
                                .image-box.image-box--1
                                    label.hidden(for='imageCover') Images 
                                    input.input-img.input--1(type='file' id='imageCover' name='imageCover' value="1" data-required='required')
                                    .image-upload
                                        svg
                                            use(xlink:href='/img/icons.svg#icon-file-plus')
                                ul.preview-container.preview-container--1.hidden
                        h1 Tour Images
                        .content-inner 
                            .content-box(class='w-full')
                                .image-box.image-box--2
                                    label.hidden(for='images') Images 
                                    input.input-img.input--2(type='file' id='images' name='images' data-length='3' data-required='required' multiple)
                                    .image-upload
                                        svg
                                            use(xlink:href='/img/icons.svg#icon-file-plus')
                                ul.preview-container.preview-container--2.hidden




