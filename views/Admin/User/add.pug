extends ../_content
//- Label'ın içindeki for ile inputların name'i kesinlikle aynı olmalı
block content
    .dashboard
        .dashboard__add
            form#dataForm(onsubmit='return false')
                .wizard
                    h3 Details
                    section.content-container
                        h1 User Details
                        .content-inner 
                            .content-box(class='w-1/2')
                                label(for='name') Name 
                                .input-box
                                    input.input-text(type='text' id='name' name='name' data-required='required')
                            .content-box(class='w-1/2')
                                label(for='email') E-mail
                                .input-box
                                    input.input-text(type='email' id='email' name='email' data-required='required')                                   
                            .content-box(class='w-1/2')
                                label(for='role') Role 
                                select.select-list(id='role' name='role' data-required='required')
                                    option(value='')
                                    each role in roles
                                        option(value=role.role)= role.role
                            .content-box(class='w-1/2')
                                label(for='password') Password 
                                .input-box
                                    input.input-text(type='password' id='password' name='password' data-min-length='8' data-required='required')
                            .content-box(class='w-1/2')
                                label(for='passwordConfirm') Password Confirm
                                .input-box
                                    input.input-text(type='password' id='passwordConfirm' name='passwordConfirm' data-required='required')
                            .content-box(class='w-full')
                                label(for='active') Active / Passive
                                label.toggle-switchy(data-size='md' for='active')
                                    input#active(type='checkbox' name='active' checked value='true')
                                    span.toggle
                                        span.switch
                    h3 Image
                    section.content-container
                        h1 User Image
                        .content-inner 
                            .content-box(class='w-full')
                                .image-box.image-box--1
                                    label.hidden(for='photo') Image 
                                    input.input-img.input--1(type='file' id='photo' name='photo')
                                    .image-upload
                                        svg
                                            use(xlink:href='/img/icons.svg#icon-file-plus')
                                ul.preview-container.preview-container--1.hidden