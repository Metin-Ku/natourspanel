header.header
    nav.nav.nav--tours 
        .nav__language 
            svg 
                use(xlink:href='/img/icons.svg#icon-globe')
            | #{t('lang')}
            .language-box 
                ul 
                    li(data-lang='tr') TR
                    li(data-lang='en') EN
        a.nav__el(href='/') #{t('all_tours')}
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout #{t('log_out')}
            a.nav__el(href='/me')
                img.nav__user-img(src=`img/users/original/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') #{t('log_in')}
            a.nav__el.nav__el--cta(href='/signup') #{t('sign_up')}
